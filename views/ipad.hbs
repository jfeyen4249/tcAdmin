    <script defer>
        const dateString = new Date().toDateString();
        let passid = 0;
        let infoEditor;
        let modelList = document.getElementById('modal-model')
        let storageBox = document.getElementById('modal-storage')
        let serialNumber = document.getElementById('modal-sn')
        let screenSize = document.getElementById('modal-screen')
        let assetTag = document.getElementById('modal-tag')
        let building = document.getElementById('modal-building')
        let room = document.getElementById('modal-room')
        let staff = document.getElementById('modal-staff')

        function openModal(id, make, model) {
            fetch(`/ipad-details?id=${id}`)
  		    .then(response => response.json())
            .then(data => {
                    console.log(id)
                    console.log(data)
                    document.getElementById('modal').style.display = 'flex';
                    passid = id;
                    serialNumber.value = data[0].sn
                    assetTag.value = data[0].tag
                    //building.value = data[0].building
                    room.value = data[0].room
                    screenSize.value = data[0].screen
                    staff.value = data[0].staff

                    

                    var selectElement = document.getElementById("modal-model"); 
                    for (var i = 0; i < selectElement.options.length; i++) {
                        var option = selectElement.options[i];
                        if (option.value === data[0].model) {
                            option.selected = true;
                            break;
                        }   
                    }

                     var selectElement = document.getElementById("modal-storage"); 
                    for (var i = 0; i < selectElement.options.length; i++) {
                        var option = selectElement.options[i];
                        if (option.value === data[0].storage) {
                            option.selected = true;
                            break;
                        }   
                    }

                    var selectElement = building; 
                    for (var i = 0; i < selectElement.options.length; i++) {
                        var option = selectElement.options[i];
                        if (option.value === data[0].building) {
                            option.selected = true;
                            break;
                        }   
                    }
        })
        }

        function AddModal() {
            document.getElementById('modal').style.display = 'flex';
            document.getElementById('modal-add').classList.remove('hidden');
        }
        
        function AddiPad() {
            let data = {
                model : modelList.value,
                sn : serialNumber.value,
                building : building.value,
                room : room.value,
                staff : staff.value,
                storage : storageBox.value,
                screen : screenSize.value,
                tag : assetTag.value
            }
            fetch(`/ipad`,{
                method: 'Post',
                body : JSON.stringify(data),
                headers: {
                    "Content-Type": "application/json",
                    },
            })
                    .then(response => response.json())
                    .then(data => {
                        
                        document.getElementById('password-table').innerHTML = '';
                        closeModal()
                    
                    });
        }

        function EditiPad() {
            let data = {
                model : modelList.value,
                sn : serialNumber.value,
                building : building.value,
                room : room.value,
                staff : staff.value,
                storage : storageBox.value,
                screen : screenSize.value,
                tag : assetTag.value
            }
            fetch(`/ipad?id=${passid}`,{
                method: 'Put',
                body : JSON.stringify(data),
                headers: {
                    "Content-Type": "application/json",
                    },
            })
                    .then(response => response.json())
                    .then(data => {
                        document.getElementById('password-table').innerHTML = '';
                        closeModal()
                    });
        }

        function closeModal() {
            document.getElementById('modal-add').classList.add('hidden');
            document.getElementById('modal-save').classList.add('hidden');
            document.getElementById('modal').style.display = 'none';
            serialNumber.value=''
            screenSize.value = ''
            assetTag.value = ''
            room.value = ''
            staff.value = ''
            passid = 0
            getBuildings()
            getmodel()
            getList()
        }

        let getList = () => {
            document.getElementById('password-table').innerHTML = '';
            fetch('/ipad')
                .then(response => response.json())
                .then(data => {
                    //console.log(data)
                    data.forEach(obj => {
                        let row = `
                            <tr class="hover:bg-blue-400" onclick="openModal('${obj.id}')">
                                <td class="py-2 px-4 border">${obj.model}</td>
                                <td class="py-2 px-4 border">${obj.storage}</td>
                                <td class="py-2 px-4 border">${obj.screen} inch</td>
                                <td class="py-2 px-4 border">${obj.sn}</td>
                                <td class="py-2 px-4 border">${obj.tag}</td>
                                <td class="py-2 px-4 border">${obj.building}</td>
                                <td class="py-2 px-4 border">${obj.room}</td>
                                <td class="py-2 px-4 border">${obj.staff}</td>
                                <td class="py-2 px-4 border">${obj.date}</td>
                            </tr>`;
                        document.getElementById('password-table').innerHTML += row;
                    });
                });
        };

        function getBuildings() {
                    building.innerHTML = ``
                    building.innerHTML += `<option value="" >Select A Building</option>`
                    building.innerHTML += `<option value="none" >Unassigned</option>`
                    fetch('/buildings')
                    .then(response => response.json())
                    .then(data => {
                        //console.log(data)
                            for(let i = 0; i<data.length; i++) {
                                let obj = data[i]
                                building.innerHTML += `
                                    <option value="${obj.name}">${obj.name}</option>`
                            }
                        });     
                }

        function getmodel() {
            document.getElementById('modal-model').innerHTML = ``
            document.getElementById('modal-model').innerHTML += `<option value="">Select A Make</option>`;

            fetch(`/ipad-model`)
                .then(response => response.json())
                .then(data => {
                    for (let i = 0; i < data.length; i++) {
                        let obj = data[i];
                        document.getElementById('modal-model').innerHTML += `
                            <option value="${obj.model}">${obj.model}</option>`;
                    }
                });
        }
 
        document.getElementById('search').addEventListener('input', function(){
            if(document.getElementById('search').length < 1) {
                getPasswords()
            } else {
                document.getElementById('password-table').innerHTML = '';
                fetch(`/ipad-search/?search=${document.getElementById('search').value}`,{method : 'get'})
                    .then(response => response.json())
                    .then(data => {
                        data.forEach(obj => {
                            let row = `
                                 <tr class="hover:bg-blue-400" onclick="openModal('${obj.id}')">
                                <td class="py-2 px-4 border">${obj.model}</td>
                                <td class="py-2 px-4 border">${obj.storage}</td>
                                <td class="py-2 px-4 border">${obj.screen} inch</td>
                                <td class="py-2 px-4 border">${obj.sn}</td>
                                <td class="py-2 px-4 border">${obj.tag}</td>
                                <td class="py-2 px-4 border">${obj.building}</td>
                                <td class="py-2 px-4 border">${obj.room}</td>
                                <td class="py-2 px-4 border">${obj.staff}</td>
                                <td class="py-2 px-4 border">${obj.date}</td>
                            </tr>`;
                            document.getElementById('password-table').innerHTML += row;
                        });
                    });
            }
        })

         function textChanged() {
            if(passid !== 0) {
                document.getElementById('modal-save').classList.remove('hidden')
            }

            if(building.value == 'none') {
                room.value = ''
                staff.value = ''
            }
        }
       
        modelList.addEventListener('input', textChanged)
        storageBox.addEventListener('input', textChanged)
        serialNumber.addEventListener('input', textChanged)
        screenSize.addEventListener('input', textChanged)
        assetTag.addEventListener('input', textChanged)
        building.addEventListener('input', textChanged)
        room.addEventListener('input', textChanged)
        staff.addEventListener('input', textChanged)

    getmodel()
    getBuildings()
    getList()
    
    </script>

